<% include partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Update Friend</h1>
        <div style="width: 30%; margin: 25px auto;">
        <form action="/friends/<%= friend._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label>Name</label>
                <input type="text" name="friend[name]" value="<%= friend.name %>">
            </div>
            <div class="form-group">
                <label>Email</label>
                <input type="text" name="friend[email]" value="<%= friend.email %>">
            </div>
                <label>Comments</label>
                <textarea name="friend[comments]"><%= friend.comments %></textarea>
            <div class="form-group">
                <input type="submit">
            </div>
        </form>
        <a href="/friends">Go Back</a>
    </div>
</div>

<% include partials/footer %>
